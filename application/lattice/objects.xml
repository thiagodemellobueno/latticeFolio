<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE configuration SYSTEM "../../lattice/lattice/lattice/objects.dtd">

<configuration>

  <objectTypes>

    <objectType name="category" contentType="category" allowChildSort="true" allowDelete="false" allowTogglePublish="false">
      <addableObject objectTypeName="article" addText="Add an Article" />
    </objectType>

    <objectType name="article" contentType="document" allowDelete="true" >
      <elements>
        <text name="multilineIPE" label="Body" isMultiline="true"/>
        <image name="file" label="Single Image">
          <resize name="test" width="96" height="58" forceDimension="height" /> 
          <ext>jpg</ext>
          <ext>tiff</ext>
          <ext>tif</ext>
        </image>
      </elements>
    </objectType>

    <objectType name="editorOnlyObjectType" contentType="document" allowDelete="true" initialAccessRoles="editor" />

    <objectType name="singleAssociator" contentType="document" allowDelete="true" >
      <elements>
        <associator name="myAssociation" label="My Association" lattice="myAssociation" metaObjectTypeName="meta" >
          <filter objectTypeName="article"/>
        </associator>
      </elements>
    </objectType>

    <objectType name="meta">
    </objectType>


    <objectType name="homePage" contentType="category" allowChildSort="false" allowDelete="false" allowTogglePublish="false">
     <elements>
      <date name="date" label="Date"/>
      <checkbox name="showDate" label="Show Date"/>
      <text name="header" label="Title"/>
      <text name="subtitle" label="Subtitle"/>
      <text name="blurb" label="Blurb"/>
      <link name="link" label="Link"/>
    </elements>
    <components>
      <component objectTypeName="imageGallery" label="ImageGallery"/>
    </components>
  </objectType>

  <objectType name="imageGallery" contentType="document" allowChildSort="false" allowDelete="false" allowTogglePublish="false">
    <addableObject objectTypeName="galleryImage" addText="Add an Image"/>
  </objectType>

  <objectType name="galleryImage" contentType="document" allowChildSort="false" allowDelete="true" allowTogglePublish="false">
    <elements>
      <image name="image" label="Image">
        <resize name="test" width="540" height="359" forceDimension="height" />
        <ext>jpg</ext>
        <ext>tiff</ext>
        <ext>tif</ext>
      </image>
      <text name="header" label="title"/>
      <text name="description" label="desription"/>
    </elements>
  </objectType>

  <objectType name="exhibitions" contentType="category" allowChildSort="false" allowDelete="false" allowTogglePublish="false">
    <elements>
      <text name="header" label="Title"/>
      <text name="blurb" label="blurb"/>
    </elements>
    <addableObject objectTypeName="exhibition" addText="Add an Exhibition"/>
  </objectType>

  <objectType name="exhibition" contentType="document" allowChildSort="false" allowDelete="false" allowTogglePublish="false">
    <elements>
      <date name="dateRange" label="Date Range"/>
      <text name="headline" label="Headline"/>
      <text name="blurb" label="Blurb"/>
      <text name="bodyCopy" label="Body Copy"/>
      <file name="PDF" label="PDF">
        <ext>PDF</ext>
      </file>
    </elements>
    <components>
      <component objectTypeName="imageGallery" label="ImageGallery"/>
    </components>

  </objectType>

  <objectType name="artists" contentType="category" allowChildSort="false" allowDelete="false" allowTogglePublish="false">
    <components>
      <component objectTypeName="representedArtists" label="Represented Artists"/>
      <component objectTypeName="worksAvailableArtists" label="Works Available Artists"/>
    </components>
  </objectType>

  <objectType name="representedArtists" contentType="document" allowChildSort="true" allowDelete="true" allowTogglePublish="true">
    <addableObject objectTypeName="artist" addText="Add an Artist"/>
  </objectType>

  <objectType name="worksAvailableArtists" contentType="document" allowChildSort="true" allowDelete="true" allowTogglePublish="true">
    <addableObject objectTypeName="artist" addText="Add an Artist"/>
  </objectType>

  <objectType name="artist" contentType="document" allowChildSort="false" allowDelete="true" allowTogglePublish="true">
    <elements>
      <text name="name" label="name"/>
      <text name="bio" label="Bio"/>
      <file name="cv" label="CV">
        <ext>PDF</ext>
      </file>
      <list name="links" label="links">
        <addableObject objectTypeName="artistLink" addText="Add a Link"/>
      </list>
    </elements>
    <components>
      <component objectTypeName="works" label="Works"/>
      <component objectTypeName="cvListing" label="CV Listing"/>
    </components>
  </objectType>

  <objectType name="artistLink" contentType="document" allowChildSort="false" allowDelete="true" allowTogglePublish="false">
    <elements>
      <text name="link" label="Link"/>
    </elements>
  </objectType>

  <objectType name="cvListing" contentType="document" allowChildSort="false" allowDelete="true" allowTogglePublish="false">
    <elements>
      <list name="cvListItem" label="CV List Item">
        <addableObject objectTypeName="cvItem" addText="Add a CV Item"/>
      </list>
    </elements>
  </objectType>

  <objectType name="cvItem" contentType="document" allowChildSort="false" allowDelete="true" allowTogglePublish="false">
    <elements>
      <text name="entry" label="entry"/>
    </elements>
  </objectType>

  <objectType name="works" contentType="category" allowChildSort="false" allowDelete="false" allowTogglePublish="false">
    <addableObject objectTypeName="work" addText="Work"/>
  </objectType>

  <objectType name="work" contentType="document" allowChildSort="false" allowDelete="true" allowTogglePublish="false">
    <elements>
      <text name="media" label="Media"/>
      <text name="dimensions" label="Dimensions"/>
      <checkbox name="shareLinks" label="Display Share Links"/>
      <image name="image" label="Image">
        <resize name="workImage" width="619" height="400" forceDimension="height" />
        <ext>jpg</ext>
        <ext>tiff</ext>
        <ext>tif</ext>
      </image>
    </elements>
  </objectType>

  <objectType name="news" contentType="category" allowChildSort="false" allowDelete="false" allowTogglePublish="false">
    <addableObject objectTypeName="newsItem" addText="Add Some News"/>
  </objectType>

  <objectType name="newsItem" contentType="document" allowChildSort="false" allowDelete="false" allowTogglePublish="false">
    <elements>
      <date name="date" label="Date"/>
      <text name="blurb" label="Blurb"/>
      <text name="bodyCopy" label="Body Copy"/>
      <image name="image" label="Image">
        <ext>jpg</ext>
        <ext>tiff</ext>
        <ext>tif</ext>
      </image>
      <text name="imageDescription" label="Image Description"/>
      <link name="link" label="Link"/>
    </elements>
  </objectType>

  <objectType name="press" contentType="category" allowChildSort="false" allowDelete="false" allowTogglePublish="false">
    <addableObject objectTypeName="pressItem" addText="Add Some Press"/>
  </objectType>

  <objectType name="pressItem" contentType="document" allowChildSort="false" allowDelete="false" allowTogglePublish="false">
    <elements>
      <date name="date" label="Date"/>
      <text name="blurb" label="Blurb"/>
      <text name="bodyCopy" label="Body Copy"/>
      <image name="image" label="Image">
        <ext>jpg</ext>
        <ext>tiff</ext>
        <ext>tif</ext>
      </image>
      <text name="imageDescription" label="Image Description"/>
      <link name="link" label="Link"/>
    </elements>
  </objectType>

  <objectType name="about" contentType="document" allowChildSort="false" allowDelete="false" allowTogglePublish="false">
    <elements>
      <image name="image" label="Image">
        <ext>jpg</ext>
        <ext>tiff</ext>
        <ext>tif</ext>
      </image>
      <text name="blurb" label="Blurb"/>
    </elements>
  </objectType>

</objectTypes>


</configuration>

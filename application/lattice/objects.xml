<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE configuration SYSTEM "../../modules/lattice/lattice/objects.dtd">

<configuration>

  <objectTypes>

    <objectType name="homePage" contentType="category" allowChildSort="false" allowDelete="false" allowTogglePublish="false">
     <elements>
      <text name="header" label="Title"/>
      <text name="subtitle" label="Subtitle"/>
      <text name="blurb" label="Blurb"/>
      <text name="link" label="Link"/>
      <list name="homeGallery" label="Home Image Gallery" allowChildSort="true">
        <addableObject objectTypeName="galleryImage" addText="Add an Image"/>
      </list>

      <text name="upcomingTitle" label="Upcoming Title"/>
      <text name="upcomingBlurb" label="Upcoming Blurb"/>
      <text name="upcomingLink" label="Upcoming Link"/>
      <image name="upcomingImage" label="Upcoming Image">
        <resize name="frontend" width="200" height="180" forceDimension="width" crop="true" /> 
        <ext>jpg</ext>
      </image>

    </elements>
  </objectType>

  <objectType name="imageGallery" contentType="document" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
    <addableObject objectTypeName="galleryImage" addText="Add an Image"/>
  </objectType>

  <objectType name="galleryImage" contentType="document" allowChildSort="true" allowDelete="true" allowTogglePublish="true">
    <elements>
      <image name="image" label="Image">
        <resize name="ui-thumb" width="220" height="220" forceDimension="width" />
        <resize name="exhibitionThumb" width="540" height="360" forceDimension="height" />
        <resize name="mediumlisting" width="300" height="150" forceDimension="width" crop="false" aspectFollowsOrientation="false" />
        <resize name="smalllisting" width="220" height="150" forceDimension="width" />
        <ext>jpg</ext>
        <ext>tiff</ext>
        <ext>tif</ext>
      </image>
      <text name="header" label="title"/>
      <text name="description" label="desription"/>
    </elements>
  </objectType>

  <objectType name="exhibitions" contentType="category" allowChildSort="true" allowDelete="false" allowTogglePublish="false">
    <addableObject objectTypeName="exhibition" addText="Add an Exhibition"/>
  </objectType>

  <objectType name="olderExhibitions" contentType="category" allowChildSort="true" allowDelete="false" allowTogglePublish="false">
    <addableObject objectTypeName="archivedExhibition" addText="add an Archived Exhibition"/>
  </objectType>
   
    <objectType name="archivedExhibition" contentType="document" allowChildSort="true" allowDelete="true" allowTogglePublish="true">

    <elements>
      <date name="date" label="Date"/>
      <text name="blurb" label="Blurb"/>
      <image name="image" label="Image">
        <resize name="archiveImage" width="200" height="180" forceDimension="width" crop="true" /> 
        <ext>jpg</ext>
      </image>
      <file name="PDF" label="PDF">
        <ext>PDF</ext>
      </file>
    </elements>
  </objectType>


  <objectType name="exhibition" contentType="document" allowChildSort="true" allowDelete="true" allowTogglePublish="true">
    <elements>
      <image name="image" label="Listing Image">
      	<resize name="mediumlisting" width="300" height="150" forceDimension="width" crop="false" />
      	<resize name="smalllisting" width="220" height="150" forceDimension="width" />
        <ext>jpg</ext>
  		</image>
      <date name="startDate" label="StartDate"/>
      <date name="endDate" label="End Date"/>
      <text name="subtitle" label="Subtitle"/>
      <text name="blurb" label="Blurb"/>
      <text name="bodyCopy" label="Body Copy"/>
      <file name="PDF" label="PDF">
        <ext>PDF</ext>
      </file>
      <list name="exhibitionGallery" label="Exhibition Gallery" allowChildSort="true">
        <addableObject objectTypeName="galleryImage" addText="Add an Image"/>
      </list>
    </elements>
  </objectType>

  <objectType name="artists" contentType="category" allowChildSort="true" allowDelete="false" allowTogglePublish="false">
    <components>
      <component objectTypeName="representedArtists" label="Represented Artists"/>
      <component objectTypeName="worksAvailableArtists" label="Works Available Artists"/>
    </components>
  </objectType>

  <objectType name="representedArtists" contentType="document" allowChildSort="true" allowDelete="true" allowTogglePublish="true">
    <addableObject objectTypeName="artist" addText="Add an Artist"/>
  </objectType>

  <objectType name="worksAvailableArtists" contentType="document" allowChildSort="true" allowDelete="true" allowTogglePublish="true">
    <addableObject objectTypeName="artist" addText="Add an Artist"/>
  </objectType>

  <objectType name="artist" contentType="document" allowChildSort="true" allowDelete="true" allowTogglePublish="true">
    <elements>
      <text name="name" label="name"/>
      <text name="bio" label="Bio"/>
      <file name="bioPDF" label="Bio PDF">
        <ext>PDF</ext>
      </file>
      <list name="links" label="links" allowChildSort="true">
        <addableObject objectTypeName="artistLink" addText="Add a Link"/>
      </list>
    </elements>
		<addableObject objectTypeName="cvListing" addText="Add a CV Listing"/> 
		<components>
      <component objectTypeName="works" label="Works"/>			
		</components>
  </objectType>
	
  <objectType name="artistLink" contentType="document" allowChildSort="true" allowDelete="false" allowTogglePublish="false">
    <elements>
      <text name="link" label="Link"/>
      <text name="linkLabel" label="Link Label"/>
    </elements>
  </objectType>

  <objectType name="cvListing" contentType="document" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
    <elements>
      <text name="bodyCopy" label="Body Copy"/>
      <!-- <list name="cvListItem" label="CV List Item" allowChildSort="true">
        <addableObject objectTypeName="cvItem" addText="Add a CV Item"/>
      </list> -->
    </elements>
  </objectType>

  <objectType name="cvItem" contentType="document" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
    <elements>
      <text name="entry" label="entry"/>
    </elements>
  </objectType>

  <objectType name="works" contentType="category" allowChildSort="true" allowDelete="false" allowTogglePublish="false">
  	<addableObject objectTypeName="work" addText="Add a Piece"/>
  </objectType>

  <objectType name="work" contentType="document" allowChildSort="true" allowDelete="true" allowTogglePublish="true">
    <elements>
      <text name="media" label="Media"/>
      <text name="dimensions" label="Dimensions"/>
      <checkbox name="privatecollection" label="Is part of a private collection?"/>
      <!-- <checkbox name="shareLinks" label="Display Share Links"/> -->
      <image name="image" label="Image">
        <resize name="workImage" width="619" height="360" forceDimension="height" />
        <resize name="workImageBig" width="780" height="500" forceDimension="height" />
        <resize name="previewThumb" width="250" height="200" forceDimension="width" />
        <ext>jpg</ext>
        <ext>tiff</ext>
        <ext>tif</ext>
      </image>
    </elements>
  </objectType>

  <objectType name="news" contentType="category" allowChildSort="true" allowDelete="false" allowTogglePublish="false">
    <addableObject objectTypeName="newsItem" addText="Add Some News"/>
  </objectType>

  <objectType name="fairs" contentType="category" allowChildSort="true" allowDelete="false" allowTogglePublish="false">
    <addableObject objectTypeName="newsItem" addText="Add an Fair"/>
  </objectType>

  <objectType name="newsItem" contentType="document" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
    <elements>
      <date name="date" label="Date"/>
      <text name="blurb" label="Blurb"/>
      <image name="image" label="Image">
        <resize name="small" width="220" height="147" forceDimension="width" />
        <resize name="med" width="300" height="150" forceDimension="width" />
        <resize name="large" width="460" height="460" forceDimension="width" />
        <ext>jpg</ext>
        <ext>tiff</ext>
        <ext>tif</ext>
      </image>
    </elements>
  </objectType>

  <objectType name="press" contentType="category" allowChildSort="true" allowDelete="false" allowTogglePublish="false">
    <addableObject objectTypeName="pressItem" addText="Add Some Press"/>
  </objectType>

  <objectType name="pressItem" contentType="document" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
    <elements>
      <date name="date" label="Date"/>
      <text name="blurb" label="Blurb"/>
      <image name="image" label="Image">
        <resize name="pressImage" width="220" height="147" forceDimension="width" />
        <ext>jpg</ext>
        <ext>tiff</ext>
        <ext>tif</ext>
      </image>
    </elements>
  </objectType>

  <objectType name="about" contentType="document" allowChildSort="true" allowDelete="false" allowTogglePublish="false">
    <elements>
      <image name="image" label="Image">
        <resize name="aboutImage" width="540" height="360" crop="true" />
        <ext>jpg</ext>
        <ext>tiff</ext>
        <ext>tif</ext>
      </image>
      <text name="imageDescription" label="Image Description"/>
      <text name="intro" label="Intro Paragraph"/>
      <text name="blurb" label="Blurb"/>
      <list name="contacts" label="Contacts" allowChildSort="true">
        <addableObject objectTypeName="contactPerson" addText="Add a Contact"/>
      </list>
    </elements>
  </objectType>

  <objectType name="contactPerson" contentType="document" allowChildSort="true" allowDelete="true" allowTogglePublish="true">
    <elements>
      <text name="name" label="Name"/>
      <text name="contactPersonTitle" label="Title"/>
      <text name="phone" label="Phone"/>
      <text name="email" label="Email"/>
		</elements>
	</objectType>
	
</objectTypes>


</configuration>

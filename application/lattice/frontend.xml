<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE configuration SYSTEM "../../lattice/lattice/lattice/frontend.dtd">

<configuration>

  <view name="artists">
    <includeData from="represented-artists" label="representedArtists"/>
    <includeData from="works-available-artists" label="worksAvailableArtists"/>
  </view>

  <view name="artist">
    <includeData from="parent" label="works" objectTypeFilter="works">
      <includeData from="parent" label="work" objectTypeFilter="work"/>
    </includeData>
    <includeData from="parent" label="cvListing" objectTypeFilter="cvListing"/>
  </view>

  <view name="exhibitions">
    <includeData from="parent" label="exhibition" objectTypeFilter="exhibition"/>
    <includeData from="older-exhibitions" label="olderExhibitions"/>
  </view>

  <view name="news">
    <includeData from="parent" label="newsItem" objectTypeFilter="newsItem"/>
  </view>

  <view name="press">
    <includeData from="parent" label="pressItem" objectTypeFilter="pressItem"/>
  </view>


</configuration>

